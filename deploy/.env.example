# GrpcHub Environment Configuration

# Server Configuration
GRPCHUB_ADDR=[::1]:50055
GRPCHUB_PORT=50055
GRPCHUB_PEM_PATH=./certs/server.pem

# Logging Configuration
RUST_LOG=info
RUST_BACKTRACE=0

# TLS Configuration
TLS_CERT_PATH=./certs/server.pem
TLS_KEY_PATH=./certs/server.pem
TLS_CA_PATH=./certs/ca.crt

# Docker Configuration
COMPOSE_PROJECT_NAME=grpchub
COMPOSE_FILE=docker-compose.yaml

# Development Configuration
DEV_PORT=50055
DEV_DEBUG_PORT=9090
DEV_RUST_LOG=debug
DEV_RUST_BACKTRACE=1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Network Configuration
NETWORK_NAME=grpchub-network

# Volume Configuration
CERTS_VOLUME=./certs
CARGO_CACHE_VOLUME=cargo-cache
TARGET_CACHE_VOLUME=target-cache

# GitHub Container Registry Configuration
GHCR_IMAGE=ghcr.io/lisoboss/grpchub:latest
GHCR_TOKEN=
